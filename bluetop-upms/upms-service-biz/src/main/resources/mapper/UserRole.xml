<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluetop.upms.biz.database.mapper.UserRoleMapper">

    <insert id="add" parameterType="UserRole">
        insert into upms_user_role(`user_id`, `role_id`, `create_user_id`, `update_user_id`) values
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.roleId}, #{item.createUserId}, #{item.updateUserId})
        </foreach>
    </insert>

    <select id="getRolesByUserId" resultType="UserRole">
        select id, user_id, role_id from upms_user_role where user_id = #{userId}
    </select>

    <delete id="deleteByUserId" parameterType="Integer">
        delete from upms_user_role where user_id = #{userId}
    </delete>

</mapper>