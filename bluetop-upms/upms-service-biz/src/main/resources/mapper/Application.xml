<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluetop.upms.biz.database.mapper.ApplicationMapper">

    <sql id="APPLICATION_COL">
        application_name, application_key, create_user_id, update_user_id
    </sql>

    <insert id="add" parameterType="Application">
        insert into upms_application(<include refid="APPLICATION_COL"/>)
        values(#{applicationName}, #{applicationKey}, #{createUserId}, #{updateUserId})
    </insert>

    <update id="modify" parameterType="Application">
        update upms_application
        <set>
            <if test="applicationName != null and applicationName != ''">
                application_name = #{applicationName},
            </if>
            <if test="applicationKey != null and applicationKey != ''">
                application_key = #{applicationKey},
            </if>
            update_user_id = #{updateUserId}
        </set>
        where id = #{id}
    </update>

    <select id="listAll" resultType="Application">
        select id, <include refid="APPLICATION_COL"/> from upms_application order by create_time limit #{start}, #{size}
    </select>

    <select id="getApplicationByAppkey" resultType="Application">
        select id, <include refid="APPLICATION_COL"/> from upms_application where application_key = #{applicationKey}
    </select>

</mapper>