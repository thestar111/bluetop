<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluetop.upms.biz.database.mapper.UserResourceMapper">

    <sql id="BASIC_COL">
        id, user_id, resource_id, create_user_id, update_user_id
    </sql>

    <!--添加用户权限信息-->
    <insert id="add" parameterType="UserResource">
        insert into upms_user_resource(<include refid="BASIC_COL"/>)
        values (#{id}, #{userId}, #{resourceId}, #{createUserId}, #{updateUserId})
    </insert>

    <select id="listAll" resultType="UserResource">
        select <include refid="BASIC_COL"/> from upms_user_resource where user_id = #{userId}
    </select>

    <delete id="deleteByUser" parameterType="Integer">
        delete from upms_user_resource where user_id = #{userId}
    </delete>

</mapper>