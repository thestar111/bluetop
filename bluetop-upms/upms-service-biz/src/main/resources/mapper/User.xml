<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluetop.upms.biz.database.mapper.UserMapper">

    <sql id="BASIC_COL">
        id, username, password, company, email, secret, status, create_user_id, update_user_id
    </sql>

    <insert id="add" parameterType="User">
        insert into upms_user(<include refid="BASIC_COL"/>)
        values (#{id}, #{username}, #{password}, #{company}, #{email}, #{secret}, #{status}, #{createUserId}, #{updateUserId})
    </insert>

    <update id="modify" parameterType="User">
        update upms_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="company != null and company != ''">
                company = #{company},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="secret != null and secret != ''">
                secret = #{secret},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="update_user_id != null and update_user_id != ''">
                update_user_id = #{update_user_id}
            </if>
        </set>
        where id=#{id};
    </update>

    <delete id="delete" parameterType="Integer">
        delete from upms_user where id = #{userId}
    </delete>

    <select id="queryById" parameterType="Integer">
        select <include refid="BASIC_COL"/> from upms_user where id = #{userId}
    </select>

    <select id="getUserByUserName" parameterType="String" resultType="User">
        select <include refid="BASIC_COL"/> from upms_user where username = #{name}
    </select>

</mapper>