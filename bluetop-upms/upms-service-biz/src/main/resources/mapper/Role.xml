<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluetop.upms.biz.database.mapper.RoleMapper">

    <insert id="add" parameterType="Role">
        insert into upms_role(role_name, role_key, role_desc, status, application_key, create_user_id, update_user_id)
        values (#{roleName}, #{roleKey}, #{roleDesc}, #{status}, #{applicationKey}, #{createUserId}, #{updateUserId})
    </insert>

    <update id="modify" parameterType="Role">
        update upms_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleKey != null and roleKey != ''">
                role_key = #{roleKey},
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                role_desc = #{roleDesc},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="applicationKey != null and applicationKey != ''">
                application_key = #{applicationKey},
            </if>
            <if test="updateUserId != null and updateUserId != ''">
                update_user_id = #{updateUserId}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        delete from upms_role where id = #{roleId}
    </delete>

    <select id="queryById" parameterType="Integer" resultType="Role">
        select * from upms_role where id = #{roleId}
    </select>

    <select id="getRolesByAppKey" resultType="Role" parameterType="String">
        select * from upms_role where application_key = #{applicationKey}
    </select>

    <select id="getRolesByIds">
        select * from role where id IN
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

</mapper>